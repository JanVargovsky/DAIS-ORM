@model IEnumerable<IssueShortDetailModel>

<h2>Issues</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Summary)</th>
            <th>@Html.DisplayNameFor(model => model.IssuePriority)</th>
            <th>@Html.DisplayNameFor(model => model.IssueType)</th>
            <th>@Html.DisplayNameFor(model => model.IssueStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.RemainingTime)</th>
            <th>@Html.DisplayNameFor(model => model.EstimatedTime)</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.Summary</td>
                <td>@issue.IssuePriority</td>
                <td>@issue.IssueType</td>
                <td>@issue.IssueStatus</td>
                <td>@issue.DescriptionShort</td>
                <td>@issue.RemainingTime.TotalHours</td>
                <td>@issue.EstimatedTime.TotalHours</td>
                <td><a href="@Url.Action("Edit", "Issue", new { id = issue.Id })" aria-label="Edit"><span class="glyphicon glyphicon-edit"></span></a></td>
                <td><a href="@Url.Action("Detail", "Issue", new { id = issue.Id })" aria-label="Detail"><span class="glyphicon glyphicon-zoom-in"></span></a></td>
                <td><a href="@Url.Action("Delete", "Issue", new { id = issue.Id })" aria-label="Remove"><span class="glyphicon glyphicon-remove"></span></a></td>
            </tr>
        }
    </tbody>
</table>
