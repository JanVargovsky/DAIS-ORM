<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issue Tracking</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <noscript>
        Turn on JS please :(
    </noscript>
    <header class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><span class="glyphicon glyphicon-heart-empty"></span> Issue Tracking</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Change", "User")"><span class="glyphicon glyphicon-user"></span> Change User</a></li>
                    <li><a href="@Url.Action("List", "Issue")"><span class="glyphicon glyphicon-tasks"></span> Issues</a></li>
                    <li><a href="@Url.Action("Create", "Issue")"><span class="glyphicon glyphicon-plus"></span> Create Issue</a></li>
                </ul>
                @if (Session["SelectedUser"] != null)
                {
                    <div class="pull-right">
                        <label id="selectedUser" class="pull-right"><span class="glyphicon glyphicon-user"></span> @(((UserModel)Session["SelectedUser"]).FullName)</label>
                    </div>
                }
            </div>
        </div>
    </header>
    <main class="container body-content">
        <div class="row">
            <div class="col-md-8">
                <div id="alerts">
                    @if (ViewBag.Alerts != null)
                    {
                        @Html.Partial("Alerts", (AlertsListModel)ViewBag.Alerts)
                    }
                    @if (TempData["Alerts"] != null)
                    {
                        @Html.Partial("Alerts", (AlertsListModel)TempData["Alerts"])
                    }
                </div>
                @RenderBody()
            </div>
            <div class="col-md-4">
                Some banners etc...
            </div>
        </div>

    </main>
    <footer class="container-fluid">
        <p class="text-center">&copy; Jan Vargovský<br />Created as project to Database and Information Systems at <a href="http://katedrainformatiky.cz/">VSB-TUO</a></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
